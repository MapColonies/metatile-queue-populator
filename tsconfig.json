{
  "extends": "@map-colonies/tsconfig/tsconfig-app",
  "compilerOptions": {
    "noUncheckedIndexedAccess": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@common/*": ["src/common/*"],
      "@openapi": ["src/openapi"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
